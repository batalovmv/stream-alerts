# Server
PORT=3000
NODE_ENV=development
PUBLIC_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/memelab_notify

# Redis
REDIS_URL=redis://localhost:6379

# MemeLab OAuth
MEMELAB_CLIENT_ID=notify-app
MEMELAB_CLIENT_SECRET=<generate-with-openssl-rand-hex-32>
MEMELAB_API_URL=https://memelab.ru/api

# Webhook secret (shared with MemeLab backend)
WEBHOOK_SECRET=<generate-with-openssl-rand-hex-32>

# Session
SESSION_SECRET=<generate-with-openssl-rand-hex-32>

# JWT Cookie name (must match MemeLab backend cookie name)
JWT_COOKIE_NAME=token

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Telegram Webhook secret (production only — auto-generated in dev)
# TELEGRAM_WEBHOOK_SECRET=<generate-with-openssl-rand-hex-32>

# Encryption key for custom bot tokens (32-byte hex — required for custom bot feature)
# Generate with: openssl rand -hex 32
BOT_TOKEN_ENCRYPTION_KEY=

# MAX Bot (Phase 3)
# MAX_BOT_TOKEN=
